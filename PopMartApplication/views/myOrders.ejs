<%- include("partials/header", { title: "My Orders" }) %>

<div class="card">
  <h2>My Orders</h2>
  <p class="muted">
    This page is used to display your past blockchain purchases (orders) and their status.
  </p>

  <div class="alert">
    <b>Tip:</b> In your actual implementation, you will read order data from the Escrow smart contract
    and render it here.
  </div>

  <br/>

  <!-- Placeholder table -->
  <table style="width:100%; border-collapse: collapse;">
    <thead>
      <tr style="text-align:left; border-bottom:1px solid #e5e7eb;">
        <th style="padding:10px;">Order ID</th>
        <th style="padding:10px;">Product</th>
        <th style="padding:10px;">Status</th>
        <th style="padding:10px;">Action</th>
      </tr>
    </thead>
    <tbody>
      <% for (let i = 0; i < sampleOrders.length; i++) { %>
        <tr style="border-bottom:1px solid #e5e7eb;">
          <td style="padding:10px;" class="mono"><%= sampleOrders[i].orderId %></td>
          <td style="padding:10px;"><%= sampleOrders[i].productName %></td>
          <td style="padding:10px;"><span class="pill"><%= sampleOrders[i].status %></span></td>
          <td style="padding:10px;">
            <button class="btn" disabled>
              Confirm Delivery (demo)
            </button>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("partials/footer", { script: "" }) %>
